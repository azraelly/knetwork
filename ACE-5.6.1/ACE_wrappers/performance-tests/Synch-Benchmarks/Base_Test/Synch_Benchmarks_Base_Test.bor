# Makefile for building the Base_Test library with Borland C++ Make

NAME = Base_Test

NO_FULL_PATH=1

OBJFILES = \
	$(OBJDIR)\base_test.$(OBJ_EXT) \
	$(OBJDIR)\Baseline_Test.$(OBJ_EXT) \
	$(OBJDIR)\mutex_test.$(OBJ_EXT)

LFLAGS = \
        -L"." \
        -j"."  \
        -L"..\..\..\lib" \
        -j"..\..\..\lib"  \
        -L"..\Synch_Lib" \
        -j"..\Synch_Lib" 

LIBFILES = \
	ACE$(LIB_DECORATOR).lib \
	Synch_Lib$(LIB_DECORATOR).lib \
	$(DUMMY_VALUE_NOT_ENDING_IN_BACKSLASH)

!ifdef STATIC
LIB_FLAGS = \
        -DACE_AS_STATIC_LIBS
!else
!endif

CFLAGS = \
	-I"..\..\.." \
	-I".." \
	$(LIB_FLAGS) \
	$(DLL_FLAGS)

CPPDIR = .
CDIR   = .

INCDIR_NAME = stage-29192\ACE_wrappers\performance-tests\Synch-Benchmarks\Base_Test

#
# pkgconfig_files rules
#


#
# Override defaults in outputdir.bor
#
INCLUDES_INSTALL=1
BINDIR = ..\..\..\lib

!include <$(ACE_ROOT)\include\makeinclude\build_library.bor>

includes_install: $(INCLUDES)
	-@if not exist $(INSTALL_DIR)\include\$(INCDIR_NAME)\. mkdir $(INSTALL_DIR)\include\$(INCDIR_NAME)\.
	-&copy /Y Baseline_Test.h $(INSTALL_DIR)\include\$(INCDIR_NAME)\Baseline_Test.h 1> NUL
	-@if not exist $(INSTALL_DIR)\include\$(INCDIR_NAME)\. mkdir $(INSTALL_DIR)\include\$(INCDIR_NAME)\.
	-&copy /Y Baseline_Test.inl $(INSTALL_DIR)\include\$(INCDIR_NAME)\Baseline_Test.inl 1> NUL

realclean:
        @-rem

