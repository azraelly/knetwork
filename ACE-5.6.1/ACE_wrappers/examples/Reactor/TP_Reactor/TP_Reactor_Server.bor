# Makefile for building the server exe with Borland C++ Make

NAME = server

NO_FULL_PATH=1

OBJFILES = \
	$(OBJDIR)\AcceptHandler.$(OBJ_EXT) \
	$(OBJDIR)\ReadHandler.$(OBJ_EXT) \
	$(OBJDIR)\server.$(OBJ_EXT)

LFLAGS = \
        -L"." \
        -j"."  \
        -L"..\..\..\lib" \
        -j"..\..\..\lib" 

LIBFILES = \
	ACE$(LIB_DECORATOR).lib \
	$(DUMMY_VALUE_NOT_ENDING_IN_BACKSLASH)

!ifdef STATIC
LIB_FLAGS = \
        -DACE_AS_STATIC_LIBS
!else
!endif

CFLAGS = \
	-I"..\..\.." \
	$(LIB_FLAGS) \
	$(DLL_FLAGS)

CPPDIR = .
CDIR   = .

INCDIR_NAME = stage-29192\ACE_wrappers\examples\Reactor\TP_Reactor

#
# Override defaults in outputdir.bor
#
INCLUDES_INSTALL=1

BASE_BINDIR = .

!include <$(ACE_ROOT)\include\makeinclude\build_exe.bor>

includes_install: $(INCLUDES)
	-@if not exist $(INSTALL_DIR)\include\$(INCDIR_NAME)\. mkdir $(INSTALL_DIR)\include\$(INCDIR_NAME)\.
	-&copy /Y AcceptHandler.h $(INSTALL_DIR)\include\$(INCDIR_NAME)\AcceptHandler.h 1> NUL
	-@if not exist $(INSTALL_DIR)\include\$(INCDIR_NAME)\. mkdir $(INSTALL_DIR)\include\$(INCDIR_NAME)\.
	-&copy /Y ReadHandler.h $(INSTALL_DIR)\include\$(INCDIR_NAME)\ReadHandler.h 1> NUL

realclean:
        @-rem

